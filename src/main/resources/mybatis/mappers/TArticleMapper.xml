<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zsc.blog.mapper.TArticleMapper">

    <!-- 更新文章 -->
    <update id="updateArticle" parameterType="TArticle">
            update t_article
     <set>
         <if test="title != null">
             title = #{title},
         </if>
         <if test="created != null">
             created = #{created},
         </if>
         <if test="modified != null">
             modified = #{modified},
         </if>
         <if test="content != null">
             content = #{content},
         </if>
         <if test="categories != null">
             categories = #{categories},
         </if>
         <if test="thumbnail != null">
             thumbnail = #{thumbnail},
         </if>
     </set>
        where id = #{id}
    </update>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zsc.blog.entity.TArticle">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="created" property="created" />
        <result column="modified" property="modified" />
        <result column="categories" property="categories" />
        <result column="thumbnail" property="thumbnail" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, content, created, modified, categories, thumbnail
    </sql>

</mapper>
